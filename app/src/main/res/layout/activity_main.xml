<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tngp17_001.applicationwork3.MainActivity">

    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/tapper"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="350dp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="30dp">

        <EditText
            android:id="@+id/editTxtInput"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:hint="@string/edittxt_hint"
            android:inputType="number"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorHint" />

    </RelativeLayout>

    <ImageButton
        android:layout_gravity="center"
        android:id="@+id/btnPlay"
        android:layout_marginBottom="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/selector_btn_play_default"
        android:adjustViewBounds="true"
        android:background="@color/colorAlpha"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

</LinearLayout>
